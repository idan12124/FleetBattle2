<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/submarine"
    android:layoutDirection="ltr"
    tools:context="com.example.idanc.fleetbattle.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/muzicb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/songb" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Welcome to idan's Fleet Battle game "
            android:textColor="#000000"
            android:textSize="30sp" />


        <Button
            android:id="@+id/login1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/shapeofb"
            android:text="LOG-IN"
            android:textSize="20sp" />


        <Button
            android:id="@+id/registerb"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/shapeofb"
            android:text="REGISTER"
            android:textSize="20sp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
